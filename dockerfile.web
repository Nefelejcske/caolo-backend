FROM rust:latest AS build

EXPOSE 8000

# install protoc
WORKDIR /usr/protocinstall
ENV PROTOC_ZIP=protoc-3.11.3-linux-x86_64.zip
RUN curl -OL https://github.com/protocolbuffers/protobuf/releases/download/v3.11.3/$PROTOC_ZIP
RUN unzip -o $PROTOC_ZIP -d /usr/local bin/protoc

WORKDIR /web

COPY ./rust-toolchain ./rust-toolchain
# cache the toolchain
RUN cargo --version

COPY ./Cargo.web.toml ./Cargo.toml
COPY ./Cargo.lock ./Cargo.lock
COPY ./protos/ ./protos/
COPY ./web/ ./web/

RUN cargo install --path web --root . --no-default-features

# ---------- Copy the built binary to a scratch container, to minimize the image size ----------

FROM ubuntu:20.04
WORKDIR /web
COPY --from=build /web/bin/cao_web /caolo
